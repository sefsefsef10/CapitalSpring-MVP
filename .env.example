# CapitalSpring Data Ingestion - Environment Variables
# Copy this to .env and fill in the values

# Application
APP_NAME=CapitalSpring Data Ingestion
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/capitalspring_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# GCP Configuration
GCP_PROJECT_ID=capitalspring-dev
GCP_REGION=us-central1

# Cloud Storage
GCS_BUCKET_NAME=capitalspring-data
GCS_INBOX_PREFIX=inbox/
GCS_PROCESSING_PREFIX=processing/
GCS_COMPLETE_PREFIX=complete/
GCS_FAILED_PREFIX=failed/
GCS_ARCHIVE_PREFIX=archive/

# Document AI
DOCUMENT_AI_LOCATION=us
DOCUMENT_AI_INVOICE_PROCESSOR_ID=
DOCUMENT_AI_FORM_PROCESSOR_ID=
DOCUMENT_AI_OCR_PROCESSOR_ID=

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-xxx
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_CONFIDENCE_THRESHOLD=0.85

# Firebase Auth
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=

# Pub/Sub
PUBSUB_DOCUMENT_UPLOADED_TOPIC=document-uploaded
PUBSUB_DOCUMENT_PROCESSED_TOPIC=document-processed

# BigQuery
BIGQUERY_DATASET=capitalspring_analytics

# Processing
PROCESSING_CONFIDENCE_THRESHOLD=0.85
PROCESSING_MAX_RETRIES=3
PROCESSING_TIMEOUT_SECONDS=300
